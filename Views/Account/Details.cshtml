@using Mwear.MvcWebUI.Entity
@model Mwear.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">
             @if (Model.OrderState == EnumOrderState.Waiting)
            {
                 <span class="badge-danger">Onay Bekliyor</span>
             }
             else if (Model.OrderState == EnumOrderState.Completed)
            {
                <span class="badge-success">Sipariş Tamamlandı</span>
            }
                </dd>

              

                <dt class="col-sm-3">Sipariş Kodu</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Toplam Tutar</dt>
                <dd class="col-sm-9">
                    <i class="fa-solid fa-turkish-lira-sign"></i>
                @Model.Total
                </dd>

                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>


                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir- @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Ürünler</dt>
                <dd class="col-sm-9">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün Fotoğrafı</th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderLines)
                            {


                            <tr>
                                <td>
                                    <img src="/Upload/@item.Image" width="70"/>
                                </td>
                                <td>@item.PruductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>
                                    <a href="/Home/Details/@item.PruductId" class="btn btn-primary btn-sm">Ürün Detayları</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                        
                    </table>

                </dd>


            </dl>

        </div>
    </div>
</div>

