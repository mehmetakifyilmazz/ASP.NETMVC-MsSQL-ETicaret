@using Mwear.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<div class="row">


    @foreach (var urun in Model)

    {
        <div class="col-md-4"  
                     <div class="card">
                         <img class="card-img-top" src="/Upload/@urun.Image" alt="@urun.Name">
                         <div class="card-body">
                             <h4 class="d-grid gap-2 col-4 mx-auto" >
                                 
                             <a  class="btn btn-success" href="/Home/Details/@urun.Id">@urun.Name</a>
                            </h4>


                         </div>
                     
                         </div>

      }
