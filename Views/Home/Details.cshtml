@using Mwear.MvcWebUI.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}
<div class="conteiner pb-4">
    <div class="row">
        <div class="col-md-5">
            <img src="/Upload/@Model.Image" class="img-respovsive ">
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 ">
                    <h1>@Model.Name</h1>


                </div>
            </div>

            <div class="col-md-6">
                <div class="row">

                    <div class="col-md-6">
                        @if (Model.IsApproved)
                        {

                            <h4 class="label label-primary">#In Stock</h4>
                        }
                        else
                        {
                            <h4 class="label label-primary">#Out Of Stock </h4>
                        }

                    </div>
                </div>
                <br />
                <div class="row">

                    <div class="col-md-5">


                        <div id="description">
                            <img src="~/Upload/foxbeden (1).jpg">

                        </div>
                        <br />

                    </div>
                    <div class="row">

                        <div class="col-md-6">

                            <h2 class="product-price"> @Model.Price₺ </h2>

                            <br />
                        </div>

                    </div>
                  
                    <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">


                        <button type="button" class="btn btn-outline-dark">S</button>
                        <button type="button" class="btn btn-outline-dark">M</button>
                        <button type="button" class="btn btn-outline-dark">L</button>
                        <button type="button" class="btn btn-outline-dark">XL</button>
                    </div>

                    <div class="row">

                        <div class="col-md-6">
                            <br>
                            <br />
                            @using (Html.BeginForm("AddToCart", "Cart"))
                            {

                                @Html.HiddenFor(i => i.Id)

                        <button type="submit" class="btn btn-success">

                            <i class="bi bi-cart4"></i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                            </svg>  Sepete Ekle
                        </button>
                            }



                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>